[alias]
	br = branch -avv
	ci = commit
	cia = commit -a
	l = log --pretty=format:'%Cred%h%Creset â–¹ %Cgreen%s%Creset       [%ar by %an]'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	st = status -sb
[user]
	name = Walter Leibbrandt
	email = git@wrl.co.za
[gui]
	fontdiff = -family Courier -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[color]
	ui = auto
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitexcludes
[diff]
	mnemonicprefix = true
	renames = copies
[grep]
	lineNumber = true
[pull]
	rebase = preserve
[push]
	default = matching
[merge]
	tool = diffconflicts
	conflictstyle = diff3
	ff = no
[mergetool "mymeld"]
	cmd = meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE
[mergetool "diffconflicts"]
	cmd = vi -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool]
	keepBackup = false
[init]
	defaultBranch = master
